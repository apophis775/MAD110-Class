<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dave.ss13clicker.Upgrades">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upgrades"
        android:textSize="20sp"
        android:layout_marginLeft="108dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="108dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="79dp" />

    <Button
        android:id="@+id/btnUpgrade1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="7dp"
        android:text="@string/btnUpgrade1"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnUpgrade2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="76dp"
        android:text="@string/btnUpgrade2"
        app:layout_constraintLeft_toLeftOf="@+id/btnUpgrade1"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnUpgrade3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="139dp"
        android:text="@string/btnUpgrade3"
        app:layout_constraintLeft_toLeftOf="@+id/btnUpgrade2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnUpgrade4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="206dp"
        android:text="@string/btnUpgrade4"
        app:layout_constraintLeft_toLeftOf="@+id/btnUpgrade3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnUpgrade5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="277dp"
        android:text="@string/btnUpgrade5"
        app:layout_constraintLeft_toLeftOf="@+id/btnUpgrade4"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/lblSpaceBucks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="27dp"
        android:text="@string/Work"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="0dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/lblSpaceBucks"
        app:layout_constraintTop_toTopOf="@+id/lblSpaceBucks" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnBack"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/btnUpgrade5"
        android:layout_marginLeft="143dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
